@page
@model MyScriptureJournal.Pages.Entries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Entry</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Entry.Title" class="control-label">Title:</label>
                        <input asp-for="Entry.Title" class="form-control" />
                        <span asp-validation-for="Entry.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Entry.Notes" class="control-label">Notes:</label>
                        <textarea asp-for="Entry.Notes" class="form-control"></textarea>
                        <span asp-validation-for="Entry.Notes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Entry.AddedDate" class="control-label">Added Date:</label>
                        <input asp-for="Entry.AddedDate" class="form-control" />
                        <span asp-validation-for="Entry.AddedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Entry.Book" class="control-label">Book:</label>
                        <input asp-for="Entry.Book" class="form-control" />
                        <span asp-validation-for="Entry.Book" class="text-secondary"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Entry.Scripture" class="control-label">Scripture:</label>
                        <input asp-for="Entry.Scripture" class="form-control" />
                        <span asp-validation-for="Entry.Scripture" class="text-secondary"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
