@page
@model MyScriptureJournal.Pages.Entries.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Are you sure you want to delete this?</h3>
        <div>
            <h4 class="card-subtitle mb-2">Entry</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Entry.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Entry.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Entry.Notes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Entry.Notes)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Entry.AddedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Entry.AddedDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Entry.Book)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Entry.Book)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Entry.Scripture)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Entry.Scripture)
                </dd>
            </dl>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Entry.Id" />
            <div class="mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
