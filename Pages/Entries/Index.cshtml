@page "{searchString?}"
@model MyScriptureJournal.Pages.Entries.IndexModel

@{
    ViewData["Title"] = "Entries";
}

<h1>Entries</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</div>

<div class="mb-3">
    <form class="form-inline">
        <div class="form-group mr-3">
            <label for="bookFilter">Filter by Book:</label>
            <select class="form-control" id="bookFilter" asp-for="Book" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
        </div>
        <div class="form-group mr-3">
            <label for="titleFilter">Filter by Note:</label>
            <input class="form-control" type="text" id="titleFilter" asp-for="SearchString" />
        </div>
        <button class="btn btn-primary" type="submit">Filter</button>
    </form>
</div>

<div class="mb-3">
    <a class="btn btn-primary" asp-page="Index" asp-route-sortBy="book">Sort by Book</a>
    <a class="btn btn-primary" asp-page="Index" asp-route-sortBy="date">Sort by Date</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Notes</th>
            <th>Added Date</th>
            <th>Book</th>
            <th>Scripture</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entry)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>@Html.DisplayFor(modelItem => item.AddedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Book)</td>
                <td>@Html.DisplayFor(modelItem => item.Scripture)</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
